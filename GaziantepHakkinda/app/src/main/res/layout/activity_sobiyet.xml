<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="11dp"
    tools:context=".sobiyet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:text="Şöbiyet"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                app:srcCompat="@drawable/ssobiyet" />

            <TextView
                android:id="@+id/tarihce_acıklama_activity_hk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:text="Şöbiyet baklavaya benzer bir Türk tatlısıdır. Süt, irmik ve ayrıca fındıktan yapılan bir krema ile doldurulur. Dışında yumuşak ama kabuklu ve içi kremsidir. Şöbiyet baklavaya benzer bir Türk tatlısıdır. Süt, irmik ve ayrıca fındıktan yapılan bir krema ile doldurulur. Dışında yumuşak ama kabuklu ve içi kremsidir. "
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>